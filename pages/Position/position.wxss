/* pages/Position/position.wxss */
page{
    height: 100%;
    background-color: rgb(22,120,255);
}
.ico{
    width: 35rpx;
    height: 35rpx;
    margin: auto;
}
.refresh-ico{
    margin-right: 10rpx;
}
.arrow-right-view{
    display: flex;
    align-items: center;
}
/*  */
.top-text{
    height: 3%;
    width: 100%;
    background-color: blanchedalmond;
    overflow: hidden;
    white-space: nowrap;
}
.top-text>view{
    position: absolute;
    text-align: center;
    font-size: 0.9rem;
    color: red;
    animation: scrollItps 18s linear infinite;
}
@keyframes scrollItps{
    0% {left: 100%;}
    100% {left: -180%;}
}

/*  */
.total-assets{
    width:100%;
    height: 22%;
    color: white;
}
.real-name-view{
    text-align: right;
    padding:10rpx 20rpx;
    font-weight: 700;
    display: flex;
}
.assets-value{
    display: flex;
    flex-direction: column;
}
.assets-label{
    margin:0 60rpx;
}
.tvalue-view{
    margin-top: 50rpx;
}
.total-value{
    margin: 0 20rpx 0 100rpx;
    font-size: 60rpx;
}
.position-value-uint{
    margin: 0 30rpx 0 0;

}

/*  */
.position-list{
    width:100%;
    height: 75%;
    background-color:rgb(245, 245, 245);
    /* border-radius: 6% 6% 0 0; */
    display: flex;
    flex-direction: column;
    margin: auto;
}

scroll-view{
    height: 90%;
}
.blank-space{
    height: 20rpx;
}
.position-list-item{
    display: flex;
    flex-direction: column;
}

.list-name{
    padding: 20rpx;
    margin: auto;
    font-weight: 700;
}
.line{
    border-top: 1rpx solid black;
    width: 80%;
    margin: auto;
}
.item{
    margin: auto;
    margin-top: 20rpx;
    padding: 10rpx;
    width: 90%;
    border-radius: 30rpx;
    background-color: rgb(255, 221, 147);
}
.item-son{
    margin: auto;
    padding: 10rpx;
    width: 85%;
    background-color: rgb(224, 212, 193);
    border: 1rpx solid burlywood;
    border-top: none;
    border-radius: 0 0 10rpx 10rpx;

}
.item-name{
    padding:0 20rpx;
    font-weight: 700;
}
.item-code{
    padding-right:20rpx;
    font-weight: 700;
    color: red;
}
.arrow{
    width:20rpx;
    height: 20rpx;
}
.item-type{
    font-size: 24rpx;
    color: red;
    border: 1rpx solid red;
    border-radius: 8rpx;
    margin-right: 20rpx;
}
.felx-title{
    display: flex;
    justify-content: space-between;
}
.felx-value{
    display: flex;
    /* justify-content: center; */
    flex-direction: column;
    margin: 30rpx;
}
.felx-value-1{
    display: flex;
    justify-content: space-around;
}
.felx-value-1>view{
    width: 50%;
}
.value-block{
    display: flex;
    flex-direction: column;
}
.value-part-2{
    display: flex;
    justify-content: space-between;
}
.felx-value-2{
    display: flex;

}
.felx-value-2>view{
    width: 50%;
}
.item-position-value,.item-move-value{
    font-size:20rpx;
    font-weight: 700;
    margin-left: 50rpx;
}
