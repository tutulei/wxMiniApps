.line-h{
    border-left: 1rpx solid grey;
    height: 80rpx;
    /* margin: 30rpx; */
}
.item-position-label,.item-nav-label,.item-price-label,.item-proportion-label,.item-move-label{
    font-size: 20rpx;
    margin-left:20rpx;
}
.item-nav-value,.item-price-value,.item-proportion-value{
    font-size: 28rpx;
    margin-left:20rpx;
    font-weight: 700;
    overflow: hidden;
    text-overflow: ellipsis;
}

/*  */
.sellers{
    padding: 10rpx;
}
.seller-title{
    font-size: 28rpx;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
}
.son-line{
    border-bottom: 1rpx solid black;
