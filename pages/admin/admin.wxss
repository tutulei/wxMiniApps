/* pages/admin/admin.wxss */
page{
    height: 100%;
}
.container{
    display: flex;
    flex-direction: column;
    height: 100%;
}
.top{
    padding:10rpx;
    border-bottom:1rpx solid gray;
    height:4%;
}
.search{
    margin: 1% 10rpx;
    display: flex;
    border: 1rpx solid rgb(172, 172, 172);
    border-radius: 80rpx;
    align-content: center;
    height:4%;
}

scroll-view{
    height: 70%;
}
.top>text{
    font-weight: 700;
    padding-left: 20rpx;
}
.ico{
    width: 50rpx;
    height: 50rpx;
    
    margin: auto 0 auto 2rpx;
}
.input{
    width: 100%;
    margin: auto 0;
}
.value-block{
    margin: 10rpx auto;
    padding: 0 2rpx;
}
.item{
    display: flex;
    margin: 10rpx;
    background-color: rgb(223, 223, 223);
    justify-content: space-around;
    /* height: 140rpx; */
    padding-top: 20rpx;
}

.item-block{
    display: flex;
    flex-direction: column;
}

.label-block{
    font-size: 70%;
    color: gray;
    margin: 10rpx auto 5rpx auto;
}

.name-block{
    max-width: 30%;
}
.modify-block{
    margin: auto 0;
}
.exitButton{
    margin-top: 8%;
}